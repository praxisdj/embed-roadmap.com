{
  "name": "embed-roadmap.com",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun services:up && bun prisma:migrate:dev && next dev -p 3000",
    "build": "echo 'Building for production ⚠️' && bunx prisma generate && bunx prisma migrate deploy && next build",
    "build:ci": "bunx prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "prettier": "prettier --write .",
    "test": "dotenv -e .env.test -- bun run services:up && dotenv -e .env.test -- bun infra/scripts/waitPostgres.ts && dotenv -e .env.test -- bun infra/scripts/createDatabase.ts && dotenv -e .env.test -- bunx prisma migrate dev && dotenv -e .env.test -- bun test tests --verbose --bail",
    "test:watch": "bun test --watch",
    "services:up": "docker compose --env-file .env -f infra/dev-compose.yaml up -d",
    "services:stop": "docker compose --env-file .env -f infra/dev-compose.yaml stop",
    "services:down": "docker compose --env-file .env -f infra/dev-compose.yaml down",
    "prisma:generate": "bunx prisma generate",
    "prisma:migrate:dev": "bunx prisma migrate dev",
    "postinstall": "bunx prisma generate",
    "prepare": "husky"
  },
  "prisma": {
    "schema": "infra/prisma/schema.prisma"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@faker-js/faker": "^9.9.0",
    "@newrelic/winston-enricher": "^4.0.1",
    "@prisma/client": "^6.11.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@slack/web-api": "^7.9.3",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "bullmq": "^5.56.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.0.1",
    "husky": "^9.1.7",
    "ioredis": "^5.6.1",
    "lucide-react": "^0.542.0",
    "next": "15.3.5",
    "next-auth": "^4.24.11",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prisma": "^6.11.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "stripe": "^18.3.0",
    "tailwind-merge": "^3.3.1",
    "winston": "^3.17.0",
    "winston-slack-webhook-transport": "^2.3.6",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/bun": "^1.2.18",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5"
  }
}