{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["bun-types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@services/*": ["./src/services/*"],
      "@infra/*": ["./infra/*"],
      "@tests/*": ["./tests/*"],
      "@utils/*": ["./src/lib/utils/*"],
      "@jobs/*": ["./src/jobs/*"],
      "@constants": ["./src/lib/utils/constants.ts"],
      "@logger": ["./src/lib/utils/logger"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".husky/*.ts"
  ],
  "exclude": ["node_modules"]
}
